<%= render 'shared/header' %>

<div class='reservation-contents'>
  <div class='reservation-left-contents'>
    <div class='show-main-contents'>
      <div class='show-left-contents'>
        <div class='show-name-contents'>
          <h3 class='show-name'>
          <%= @room.room_name %>
          </h3>
        </div>
        <div class='show-image-contents'>
          <%= image_tag @room.image, class: 'hotel-image' %>
        </div>
        <div class='show-facility-contents'>
         <%= @room.facilities.pluck(:name).join(" ") %>
        </div>
      </div>
    </div>

    <div class='reservation-main-contents'>
      <div class='hotel-post-contents'>
        <div class='form-left-contents'>
          <div class='form-post-main'>
            <h2 class='form-post-title'>予約フォーム</h2>
            <%= form_with model:@reservation, url: reservations_path(id: @room.id), local: true do |f| %>
               <%# 予約の情報 %>
              <div class="new-form">
                <div class='form-flex'>
                  <div class="form-date-text">
                    チェックイン
                    <div class='check-in'>
                      <%= f.date_field :start_date, class:"form-date" %>
                    </div>
                  </div>
                  <div class="weight-bold-text">
                    チェックアウト
                    <div class='check-out'>
                      <%= f.date_field :end_date, class:"form-date" %>
                    </div>
                  </div>
                </div>
                <div class='weight-bold-text'>
                人数
                </div>
                <%= f.text_field :person, class:'form-person', placeholder: 2 %>
                <div class='form-flex'>
                  <div class='weight-bold-text'>
                    お名前(全角)
                  <div>
                    <%= f.text_area :last_name, class:'input-name', placeholder:'例）山田' %>
                    <%= f.text_area :first_name, class:'input-name', placeholder:'例）陸太郎' %>
                  </div>
                </div>
              </div>
              <div class='form-flex'>
                <div class='weight-bold-text'>
                  お名前(カナ)
                <div>
                    <%= f.text_area :last_kana, class:'input-name', placeholder:'例）ヤマダ' %>
                    <%= f.text_area :first_kana, class:'input-name', placeholder:'例）リクタロウ' %>
                </div>
              </div>
              </div>
              <div class='weight-bold-text'>
                電話番号
              </div>
              <%= f.text_field :phone_number, class:"input-default", id:"phone-number", placeholder:"例）09012345678",maxlength:"11"%>
              <div class='registration-button'>
                <%= f.submit "登録" ,class:"registration-blue-button" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class='reservation-right-contents'>
  </div>
</div>
</div>

<%= render partial: "shared/footer" %>


